<div class="page-header">
<h3>All Statuses</h3> 
<% if user_signed_in? %>
<%= link_to "Post a New Status", new_status_path, class: "btn" %>
<% else %>
<% end %>
</div>


<% @statuses.each do |status| %>
<div class="status">
<div class="strong">
  <strong><%= status.user.full_name %> </strong><%= link_to time_ago_in_words(status.created_at) + " ago", status %>
  <p><%= status.content %></p>
    <span class="admin">
      <%= link_to "Edit", edit_status_path(status) %> |
      <%= link_to "Delete", status, method: :delete, data: {confirm: "Are you sure you want to delete this message?"} %>
  </div>
</div>
<% end %>